#/etc/bashrc
umask 022
PATH="/sbin:/bin:/usr/sbin:/usr/bin:/usr/X11R6/bin:/usr/local/sbin:/usr/local/bin:."
export PATH
# LOCALE
[ -f /etc/sysconfig/i18n ] && . /etc/sysconfig/i18n && [ -n "$LANG" ] && export LANG
#[ -n "$TTY" ] && PS1="\[[1;34m\]knoppix@$TTY[\W]#\[[0;39m\] " || PS1="\[[1;34m\][\W]#\[[0;39m\] "
if [ "$USER" == "root" ]
then
 PS1="root # "
else  
 PS1="$ "
fi 
