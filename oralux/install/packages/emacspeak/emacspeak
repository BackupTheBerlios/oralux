#!/bin/sh
# emacspeak - execute emacs with speech enhancements
#$Id: emacspeak,v 1.1 2004/09/27 20:30:06 gcasse Exp $
# WARNING:
# This file is not the original one: modified for Oralux
#

    if [ -f /etc/emacspeak.conf ]
    then
    . /etc/emacspeak.conf
fi

if [ -f $HOME/.emacs ]
then
	INITSTR="-l $HOME/.emacs"
fi

CL_ALL=""
for CL in $* ; do
	if [ "$CL" = "-o" ]; then
		DTK_PROGRAM=stereo-outloud
		export DTK_PROGRAM
                elif [ "$CL" = "-d" ]; then
		DTK_PROGRAM=dtk-soft
		export DTK_PROGRAM
	elif [ "$CL" = "-q" ]; then
		INITSTR=""
	else
		CL_ALL="$CL_ALL $CL"
	fi
done


EMACS_UNIBYTE=1
export EMACS_UNIBYTE

# G.Casse 2003/09/29 Modified for Oralux
case $LANGUAGE in
    fr)
    TheLanguage=fr;;
    ru)
    TheLanguage=ru;;
    *)
    TheLanguage=us;;
esac

exec emacs -q -l /usr/share/emacs/site-lisp/emacspeak/lisp/emacspeak-setup.el $INITSTR $CL_ALL --visit=/usr/share/oralux/doc/intro-$TheLanguage.txt

