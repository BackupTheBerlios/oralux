#!/usr/bin/pdmenu

preproc:echo menu:main:minimenu

preproc:\
	case "$LANGUAGE" in \
	br) echo "exec:YASR documentation::ne /usr/share/oralux/doc/Yasr/br/README.oralux";; \
	es) echo "exec:YASR documentation::ne /usr/share/oralux/doc/Yasr/es/README.oralux";; \
	fr) echo "exec:YASR documentation::ne /usr/share/oralux/doc/Yasr/fr/README.oralux";; \
	ru) echo "exec:YASR documentation::ne /usr/share/oralux/doc/Yasr/ru/README.oralux";; \
	*) echo "exec:YASR documentation (in English)::ne /usr/share/oralux/doc/Yasr/en/README.oralux";; \
	esac
	exec:Links, web browser with javascript capabilities::links2 /usr/share/oralux/doc/htm/faq.htm
	exec:N E, the nice editor::ne
#	exec:Help::ne /usr/share/oralux/doc/mcvox-$LANG.txt
	exec:m c vox, file browser::mcvox
	exec:qalc, calculator::qalc
	exec:linphonec, SIP internet phone::linphonec
	exec:Micq, I C Q::micq
	exec:imcom, jabber client::imcom

preproc:\
	case "$LANGUAGE" in \
	de) echo "exec:play a game\: adventure::frotz /usr/share/oralux/install/packages/games/de/abent.z5";; \
	es) echo "exec:play a game\: adventure::frotz /usr/share/oralux/install/packages/games/es/AVENTURA.Z5";; \
	fr) echo "exec:Jeu \: filaments::frotz /usr/share/oralux/install/packages/games/fr/filaments.z8"; echo "exec:Jeu \: aventure::frotz /usr/share/oralux/install/packages/games/fr/aventure.z5";; \
	*) echo "exec:play a game\: adventure (in English)::frotz /usr/share/oralux/install/packages/games/adventure/Advent.z5";; \
	esac

	exec:Drop to a shell::echo "When you're done, type 'exit' to return to the menu.";/bin/sh -login
	exec:Display the time:display:date
	exit:Exit
