#! /usr/bin/env python
list = Split("""
docAPI.c
frame.c
""")

include = Split("""
/usr/include/glib-2.0
/usr/include/glib-2.0/glib
/usr/lib/glib-2.0/include
../graphic
../terminfo
../termbuffer
../termapi
../debug
""")

Import('env');

termbuffer = env.Library(
    'document'
    , list
    , CPPPATH = include);

