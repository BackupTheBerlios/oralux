#! /usr/bin/env python
list = Split("""
tengoo.c
test-tengoo.c
""")

include = Split("""
/usr/include/glib-2.0
/usr/lib/glib-2.0/include
../mode
../termbuffer
../termapi
../terminfo
../debug
""")

Import('env')

env.Program(target = 'tengoo'
            , source = list
            , CPPPATH = include
            , LIBPATH = ['../mode',
                         '../termapi',
                         '../termbuffer',
                         '../terminfo',
                         '../debug']
            , LIBS = ['glib-2.0',
                      'util',
                      'mode',
                      'termapi',
                      'termbuffer',
                      'terminfo',
                      'debug'])
